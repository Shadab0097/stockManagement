{
    "rewrites": [
      {
        "source": "/(login|logout|admin/login|admin/logout)",
        "destination": "https://stock-management-backend-iota.vercel.app/:match"
      },
      {
        "source": "/((?!static|.*\\..*|api).*)",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/(dashboard|users|products|sales|user/products|user/sales)",
        "headers": [
          { "key": "Cache-Control", "value": "no-store, max-age=0" }
        ]
      },
      {
        "source": "/admin/.*",
        "headers": [
          { "key": "X-Frame-Options", "value": "DENY" },
          { "key": "Content-Security-Policy", "value": "default-src 'self'" }
        ]
      },
      {
        "source": "/static/(.*)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000" }
        ]
      }
    ]
  }