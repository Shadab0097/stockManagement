{
    "version": 2,
    "rewrites": [
      {
        "source": "/(login|logout|admin/login|admin/logout)(?<path>.*)",
        "destination": "https://stock-management-backend-iota.vercel.app/:path"
      },
      {
        "source": "/((?!static|.*\\..*|api).*)",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/(dashboard|users|products|sales|user/products|user/sales)",
        "headers": [
          { "key": "Cache-Control", "value": "no-store, max-age=0" }
        ]
      },
      {
        "source": "/admin/.*",
        "headers": [
          { "key": "X-Frame-Options", "value": "DENY" },
          { "key": "Content-Security-Policy", "value": "default-src 'self'" }
        ]
      }
    ]
  }